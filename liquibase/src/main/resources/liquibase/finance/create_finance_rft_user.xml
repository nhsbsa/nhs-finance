<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="jeffreya" id="create-finance-user-table">
        <createTable schemaName="public" tableName="finance_user">
            <column autoIncrement="true" name="finance_user_id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="member_pkey"/>
            </column>
            <column name="uuid" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="jeffreya" id="add-finance-user">
        <insert tableName="finance_user">
            <column name="finance_user_id" value="1"/>
            <column name="first_name" value="Sam"/>
            <column name="last_name" value="Jones"/>
            <column name="username" value="sam.jones@email.com"/>
            <column name="uuid" value="997bd0eb-cd6e-4829-a507-4d0218cf4e78"/>
        </insert>
    </changeSet>

</databaseChangeLog>
